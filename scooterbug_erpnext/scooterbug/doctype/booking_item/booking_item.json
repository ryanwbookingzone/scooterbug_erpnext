{
  "name": "Booking Item",
  "module": "scooterbug",
  "doctype": "DocType",
  "document_type": "Document",
  "istable": 1,
  "engine": "InnoDB",
  "field_order": [
    "item_type",
    "equipment",
    "locker",
    "column_break_1",
    "item_name",
    "quantity",
    "section_break_2",
    "daily_rate",
    "rental_days",
    "subtotal",
    "column_break_3",
    "damage_waiver_rate",
    "damage_waiver_total",
    "line_total"
  ],
  "fields": [
    {
      "fieldname": "item_type",
      "fieldtype": "Select",
      "label": "Item Type",
      "reqd": 1,
      "in_list_view": 1,
      "options": "Equipment\nLocker"
    },
    {
      "fieldname": "equipment",
      "fieldtype": "Link",
      "label": "Equipment",
      "options": "Equipment",
      "depends_on": "eval:doc.item_type=='Equipment'",
      "mandatory_depends_on": "eval:doc.item_type=='Equipment'"
    },
    {
      "fieldname": "locker",
      "fieldtype": "Link",
      "label": "Locker",
      "options": "Locker",
      "depends_on": "eval:doc.item_type=='Locker'",
      "mandatory_depends_on": "eval:doc.item_type=='Locker'"
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "item_name",
      "fieldtype": "Data",
      "label": "Item Name",
      "in_list_view": 1,
      "read_only": 1
    },
    {
      "fieldname": "quantity",
      "fieldtype": "Int",
      "label": "Quantity",
      "default": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "section_break_2",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "daily_rate",
      "fieldtype": "Currency",
      "label": "Daily Rate",
      "in_list_view": 1
    },
    {
      "fieldname": "rental_days",
      "fieldtype": "Int",
      "label": "Rental Days"
    },
    {
      "fieldname": "subtotal",
      "fieldtype": "Currency",
      "label": "Subtotal",
      "read_only": 1
    },
    {
      "fieldname": "column_break_3",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "damage_waiver_rate",
      "fieldtype": "Currency",
      "label": "Damage Waiver Rate"
    },
    {
      "fieldname": "damage_waiver_total",
      "fieldtype": "Currency",
      "label": "Damage Waiver Total",
      "read_only": 1
    },
    {
      "fieldname": "line_total",
      "fieldtype": "Currency",
      "label": "Line Total",
      "in_list_view": 1,
      "read_only": 1,
      "bold": 1
    }
  ],
  "track_changes": 1
}
