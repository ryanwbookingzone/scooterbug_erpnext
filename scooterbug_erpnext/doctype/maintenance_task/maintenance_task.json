{
  "name": "Maintenance Task",
  "module": "scooterbug_erpnext",
  "doctype": "DocType",
  "document_type": "Document",
  "engine": "InnoDB",
  "field_order": [
    "task_id",
    "task_type",
    "equipment",
    "column_break_1",
    "status",
    "priority",
    "location",
    "section_break_2",
    "description",
    "section_break_3",
    "assigned_to",
    "due_date",
    "column_break_4",
    "started_at",
    "completed_at",
    "section_break_5",
    "parts_used",
    "labor_hours",
    "total_cost",
    "section_break_6",
    "notes",
    "resolution"
  ],
  "fields": [
    {
      "fieldname": "task_id",
      "fieldtype": "Data",
      "label": "Task ID",
      "reqd": 1,
      "unique": 1,
      "in_list_view": 1,
      "read_only": 1
    },
    {
      "fieldname": "task_type",
      "fieldtype": "Select",
      "label": "Task Type",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "options": "Battery Replacement\nTire Change\nGeneral Service\nBrake Check\nMotor Repair\nElectrical Repair\nFrame Repair\nCleaning\nInspection"
    },
    {
      "fieldname": "equipment",
      "fieldtype": "Link",
      "label": "Equipment",
      "options": "Equipment",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Status",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "options": "Pending\nIn Progress\nCompleted\nCancelled",
      "default": "Pending"
    },
    {
      "fieldname": "priority",
      "fieldtype": "Select",
      "label": "Priority",
      "in_list_view": 1,
      "in_standard_filter": 1,
      "options": "Low\nMedium\nHigh\nCritical",
      "default": "Medium"
    },
    {
      "fieldname": "location",
      "fieldtype": "Link",
      "label": "Location",
      "options": "ScooterBug Location",
      "in_standard_filter": 1
    },
    {
      "fieldname": "section_break_2",
      "fieldtype": "Section Break",
      "label": "Description"
    },
    {
      "fieldname": "description",
      "fieldtype": "Small Text",
      "label": "Description"
    },
    {
      "fieldname": "section_break_3",
      "fieldtype": "Section Break",
      "label": "Assignment"
    },
    {
      "fieldname": "assigned_to",
      "fieldtype": "Link",
      "label": "Assigned To",
      "options": "User"
    },
    {
      "fieldname": "due_date",
      "fieldtype": "Date",
      "label": "Due Date",
      "in_list_view": 1
    },
    {
      "fieldname": "column_break_4",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "started_at",
      "fieldtype": "Datetime",
      "label": "Started At"
    },
    {
      "fieldname": "completed_at",
      "fieldtype": "Datetime",
      "label": "Completed At"
    },
    {
      "fieldname": "section_break_5",
      "fieldtype": "Section Break",
      "label": "Cost"
    },
    {
      "fieldname": "parts_used",
      "fieldtype": "Small Text",
      "label": "Parts Used"
    },
    {
      "fieldname": "labor_hours",
      "fieldtype": "Float",
      "label": "Labor Hours"
    },
    {
      "fieldname": "total_cost",
      "fieldtype": "Currency",
      "label": "Total Cost"
    },
    {
      "fieldname": "section_break_6",
      "fieldtype": "Section Break",
      "label": "Notes"
    },
    {
      "fieldname": "notes",
      "fieldtype": "Small Text",
      "label": "Notes"
    },
    {
      "fieldname": "resolution",
      "fieldtype": "Small Text",
      "label": "Resolution"
    }
  ],
  "autoname": "naming_series:",
  "naming_rule": "By \"Naming Series\" field",
  "naming_series_options": "MT-.YYYY.-.#####",
  "title_field": "task_type",
  "search_fields": "task_id,equipment,task_type,assigned_to",
  "sort_field": "modified",
  "sort_order": "DESC",
  "track_changes": 1,
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "Sales Manager",
      "read": 1,
      "write": 1,
      "create": 1
    },
    {
      "role": "Maintenance User",
      "read": 1,
      "write": 1,
      "create": 1
    }
  ]
}
