{
  "name": "Waste Log",
  "module": "BookingZone",
  "doctype": "DocType",
  "document_type": "Document",
  "is_submittable": 1,
  "engine": "InnoDB",
  "field_order": [
    "waste_date",
    "outlet",
    "warehouse",
    "column_break_1",
    "shift",
    "logged_by",
    "status",
    "section_item",
    "item_code",
    "item_name",
    "column_break_2",
    "quantity",
    "uom",
    "waste_value",
    "section_reason",
    "waste_reason",
    "waste_category",
    "column_break_3",
    "is_recoverable",
    "recovery_action",
    "section_details",
    "description",
    "image",
    "section_approval",
    "requires_approval",
    "approved_by",
    "approval_date",
    "amended_from"
  ],
  "fields": [
    {
      "fieldname": "waste_date",
      "fieldtype": "Datetime",
      "label": "Waste Date/Time",
      "reqd": 1,
      "default": "Now",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "outlet",
      "fieldtype": "Link",
      "label": "Outlet",
      "options": "Outlet",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "warehouse",
      "fieldtype": "Link",
      "label": "Warehouse",
      "options": "Warehouse",
      "reqd": 1
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "shift",
      "fieldtype": "Select",
      "label": "Shift",
      "options": "Morning\nAfternoon\nEvening\nNight",
      "in_standard_filter": 1
    },
    {
      "fieldname": "logged_by",
      "fieldtype": "Link",
      "label": "Logged By",
      "options": "User",
      "default": "__user",
      "read_only": 1
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Status",
      "options": "Draft\nPending Approval\nApproved\nSubmitted\nCancelled",
      "default": "Draft",
      "in_list_view": 1,
      "read_only": 1
    },
    {
      "fieldname": "section_item",
      "fieldtype": "Section Break",
      "label": "Item Details"
    },
    {
      "fieldname": "item_code",
      "fieldtype": "Link",
      "label": "Item Code",
      "options": "Item",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "item_name",
      "fieldtype": "Data",
      "label": "Item Name",
      "fetch_from": "item_code.item_name",
      "read_only": 1
    },
    {
      "fieldname": "column_break_2",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "quantity",
      "fieldtype": "Float",
      "label": "Quantity",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "uom",
      "fieldtype": "Link",
      "label": "UOM",
      "options": "UOM",
      "fetch_from": "item_code.stock_uom"
    },
    {
      "fieldname": "waste_value",
      "fieldtype": "Currency",
      "label": "Waste Value",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "section_reason",
      "fieldtype": "Section Break",
      "label": "Waste Reason"
    },
    {
      "fieldname": "waste_reason",
      "fieldtype": "Select",
      "label": "Waste Reason",
      "options": "Expired\nSpoiled\nOverproduction\nCustomer Return\nPreparation Error\nEquipment Failure\nContamination\nDropped/Spilled\nQuality Issue\nOther",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "waste_category",
      "fieldtype": "Select",
      "label": "Waste Category",
      "options": "Food Waste\nBeverage Waste\nPackaging Waste\nSupplies Waste",
      "default": "Food Waste"
    },
    {
      "fieldname": "column_break_3",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "is_recoverable",
      "fieldtype": "Check",
      "label": "Is Recoverable",
      "description": "Can this waste be donated or composted?"
    },
    {
      "fieldname": "recovery_action",
      "fieldtype": "Select",
      "label": "Recovery Action",
      "options": "\nDonated\nComposted\nRecycled\nDisposed",
      "depends_on": "is_recoverable"
    },
    {
      "fieldname": "section_details",
      "fieldtype": "Section Break",
      "label": "Additional Details"
    },
    {
      "fieldname": "description",
      "fieldtype": "Small Text",
      "label": "Description"
    },
    {
      "fieldname": "image",
      "fieldtype": "Attach Image",
      "label": "Photo Evidence"
    },
    {
      "fieldname": "section_approval",
      "fieldtype": "Section Break",
      "label": "Approval",
      "depends_on": "requires_approval"
    },
    {
      "fieldname": "requires_approval",
      "fieldtype": "Check",
      "label": "Requires Approval",
      "description": "Auto-set for high-value waste"
    },
    {
      "fieldname": "approved_by",
      "fieldtype": "Link",
      "label": "Approved By",
      "options": "User",
      "read_only": 1
    },
    {
      "fieldname": "approval_date",
      "fieldtype": "Datetime",
      "label": "Approval Date",
      "read_only": 1
    },
    {
      "fieldname": "amended_from",
      "fieldtype": "Link",
      "label": "Amended From",
      "options": "Waste Log",
      "read_only": 1,
      "no_copy": 1
    }
  ],
  "autoname": "naming_series:",
  "naming_series": "WASTE-.YYYY.-.#####",
  "title_field": "item_name",
  "image_field": "image",
  "search_fields": "item_code, item_name, waste_reason, outlet",
  "sort_field": "modified",
  "sort_order": "DESC",
  "track_changes": 1,
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "submit": 1,
      "cancel": 1,
      "amend": 1
    },
    {
      "role": "Restaurant Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "submit": 1
    },
    {
      "role": "Kitchen Staff",
      "read": 1,
      "write": 1,
      "create": 1
    }
  ]
}
