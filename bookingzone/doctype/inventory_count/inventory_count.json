{
  "name": "Inventory Count",
  "module": "BookingZone",
  "doctype": "DocType",
  "document_type": "Document",
  "is_submittable": 1,
  "engine": "InnoDB",
  "field_order": [
    "count_date",
    "outlet",
    "warehouse",
    "column_break_1",
    "status",
    "count_type",
    "counted_by",
    "section_items",
    "items",
    "section_summary",
    "total_counted_value",
    "total_system_value",
    "column_break_2",
    "total_variance",
    "variance_percentage",
    "section_notes",
    "notes",
    "amended_from"
  ],
  "fields": [
    {
      "fieldname": "count_date",
      "fieldtype": "Date",
      "label": "Count Date",
      "reqd": 1,
      "default": "Today",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "outlet",
      "fieldtype": "Link",
      "label": "Outlet",
      "options": "Outlet",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "warehouse",
      "fieldtype": "Link",
      "label": "Warehouse",
      "options": "Warehouse",
      "reqd": 1
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Status",
      "options": "Draft\nIn Progress\nCompleted\nSubmitted\nCancelled",
      "default": "Draft",
      "in_list_view": 1,
      "in_standard_filter": 1,
      "read_only": 1
    },
    {
      "fieldname": "count_type",
      "fieldtype": "Select",
      "label": "Count Type",
      "options": "Full Count\nSpot Check\nCategory Count\nHigh Value Items",
      "default": "Full Count"
    },
    {
      "fieldname": "counted_by",
      "fieldtype": "Link",
      "label": "Counted By",
      "options": "User",
      "default": "__user"
    },
    {
      "fieldname": "section_items",
      "fieldtype": "Section Break",
      "label": "Count Items"
    },
    {
      "fieldname": "items",
      "fieldtype": "Table",
      "label": "Items",
      "options": "Inventory Count Item",
      "reqd": 1
    },
    {
      "fieldname": "section_summary",
      "fieldtype": "Section Break",
      "label": "Summary"
    },
    {
      "fieldname": "total_counted_value",
      "fieldtype": "Currency",
      "label": "Total Counted Value",
      "read_only": 1
    },
    {
      "fieldname": "total_system_value",
      "fieldtype": "Currency",
      "label": "Total System Value",
      "read_only": 1
    },
    {
      "fieldname": "column_break_2",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "total_variance",
      "fieldtype": "Currency",
      "label": "Total Variance",
      "read_only": 1
    },
    {
      "fieldname": "variance_percentage",
      "fieldtype": "Percent",
      "label": "Variance %",
      "read_only": 1
    },
    {
      "fieldname": "section_notes",
      "fieldtype": "Section Break",
      "label": "Notes"
    },
    {
      "fieldname": "notes",
      "fieldtype": "Small Text",
      "label": "Notes"
    },
    {
      "fieldname": "amended_from",
      "fieldtype": "Link",
      "label": "Amended From",
      "options": "Inventory Count",
      "read_only": 1,
      "no_copy": 1
    }
  ],
  "autoname": "naming_series:",
  "naming_series": "INV-CNT-.YYYY.-.#####",
  "title_field": "count_date",
  "search_fields": "count_date, outlet, warehouse, status",
  "sort_field": "modified",
  "sort_order": "DESC",
  "track_changes": 1,
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "submit": 1,
      "cancel": 1,
      "amend": 1
    },
    {
      "role": "Restaurant Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "submit": 1
    },
    {
      "role": "Stock User",
      "read": 1,
      "write": 1,
      "create": 1
    }
  ]
}
